#!/usr/bin/env zsh

{{- $home := .chezmoi.homeDir }}
{{- $ssh_keys := .ssh.keys }}
{{- $ssh_configs := .ssh.configs }}

{{- range $key := $ssh_keys }}

{{- $file := (printf "%s/%s" $ssh_configs $key) }}
{{- $file = $file | replace "$HOME" $home }}

#  {{ $key }} - {{ $file }}
if [[ ! -z "{{ $file }}" && -f "{{ $file }}" ]]; then
  cp -f "{{ $file }}" ~/.ssh/{{ $key }}
  chmod 600 "~/.ssh/{{ $file }}"
fi

{{ end }}
